@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex align-items-center">
        <span class="text-white me-3">Hello @User.Identity?.Name!</span>
        <a class="btn btn-login me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-register">Logout</button>
        </form>
    </div>
}
else
{
    <div class="d-flex">
        <a class="btn btn-login me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
}
