@model StarEvents.DataAccess.Models.LoyalityPointHistory
@{ ViewData["Title"] = "Delete Loyalty Ref"; var accent = "#ff6600"; var primary = "#000080"; }
<div class="row justify-content-center">
  <div class="col-lg-6 col-xl-5">
    <div class="card shadow-sm border-0">
      <div class="card-header text-white" style="background:@primary"><h5 class="mb-0"><i class="fa fa-trash-alt me-2"></i>Delete Loyalty Reference</h5></div>
      <div class="card-body">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
          <i class="fa fa-exclamation-triangle me-2"></i>
          <div>Are you sure you want to delete this loyalty reference?</div>
        </div>
        <dl class="row mb-0">
          <dt class="col-sm-4 small text-uppercase text-muted">Name</dt>
          <dd class="col-sm-8 fw-semibold">@Model.Name</dd>
          <dt class="col-sm-4 small text-uppercase text-muted">Description</dt>
          <dd class="col-sm-8">@Model.Description</dd>
          <dt class="col-sm-4 small text-uppercase text-muted">Points</dt>
          <dd class="col-sm-8">@Model.Points</dd>
        </dl>
      </div>
      <div class="card-footer bg-light d-flex gap-2">
        <form asp-action="Delete" class="d-inline"><input type="hidden" asp-for="Id" /><button type="submit" class="btn btn-danger"><i class="fa fa-trash me-1"></i>Delete</button></form>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-arrow-left me-1"></i>Cancel</a>
      </div>
    </div>
  </div>
</div>