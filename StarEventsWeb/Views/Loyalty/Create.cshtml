@model StarEvents.DataAccess.Models.LoyalityPointHistory
@{ ViewData["Title"] = "Add Loyalty Ref"; var accent = "#ff6600"; var primary = "#000080"; }


    <div class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background:@primary"><h5 class="mb-0"><i class="fa fa-plus-circle me-2"></i>Add Loyalty Reference</h5></div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Event Attendance Bonus" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" rows="3" class="form-control" placeholder="Describe the action granting points..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Points" class="form-label fw-semibold"></label>
                            <div class="input-group"><span class="input-group-text"><i class="fa fa-star"></i></span><input asp-for="Points" class="form-control" /></div>
                            <span asp-validation-for="Points" class="text-danger small"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn text-white" style="background:@accent"><i class="fa fa-save me-1"></i>Save</button>
                            <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-arrow-left me-1"></i>Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


@section Scripts {     
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
}