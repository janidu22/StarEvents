@model StarEvents.DataAccess.Models.LoyalityPointHistory
@{ ViewData["Title"] = "Loyalty Details"; var accent = "#ff6600"; var primary = "#000080"; }
<div class="row justify-content-center">
  <div class="col-lg-6 col-xl-5">
    <div class="card shadow-sm border-0">
      <div class="card-header text-white" style="background:@primary"><h5 class="mb-0"><i class="fa fa-star me-2"></i>@Model.Name</h5></div>
      <div class="card-body">
        <dl class="row mb-0">
          <dt class="col-sm-4 small text-uppercase text-muted">ID</dt>
          <dd class="col-sm-8 fw-semibold">@Model.Id</dd>
          <dt class="col-sm-4 small text-uppercase text-muted">Name</dt>
          <dd class="col-sm-8">@Model.Name</dd>
          <dt class="col-sm-4 small text-uppercase text-muted">Description</dt>
          <dd class="col-sm-8">@Model.Description</dd>
          <dt class="col-sm-4 small text-uppercase text-muted">Points</dt>
          <dd class="col-sm-8">@Model.Points</dd>
        </dl>
      </div>
      <div class="card-footer bg-light d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm text-white" style="background:@accent"><i class="fa fa-edit me-1"></i>Edit</a>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary"><i class="fa fa-arrow-left me-1"></i>Back</a>
      </div>
    </div>
  </div>
</div>