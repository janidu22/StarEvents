@model IEnumerable<StarEvents.DataAccess.Models.LoyalityPointHistory>
@{ ViewData["Title"] = "Loyalty References"; var accent = "#ff6600"; var primary = "#000080"; }


<div class="px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold" style="color:@primary">Loyalty References</h1>
        <a asp-action="Create" class="btn btn-sm text-white" style="background:@accent"><i class="fa fa-plus me-1"></i>Add</a>
    </div>
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="text-white" style="background:@primary">
                    <tr><th>ID</th><th>Name</th><th>Description</th><th class="text-end">Points</th><th style="width:140px"></th></tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr><td colspan="5" class="text-center py-4 text-muted">No loyalty references.</td></tr>
                        ;
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Description</td>
                                <td class="text-end">@item.Points</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>