@model IEnumerable<StarEvents.DataAccess.Models.Event>
@{
    ViewData["Title"] = "Events";
    var accent = "#ff6600"; // from layout
    var primary = "#000080";
}
<div class="px-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold" style="color:@primary">Event Management</h1>
        <div>
            <a asp-action="Create" class="btn btn-sm" style="background:@accent;color:#fff"><i class="fa fa-plus me-1"></i>Create Event</a>
        </div>
    </div>
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="text-white" style="background:@primary">
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Start</th>
                            <th>End</th>
                            <th class="text-end">Price (LKR)</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Available</th>
                            <th>Status</th>
                            <th>Venue</th>
                            <th style="width:140px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center py-4 text-muted">No events found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                var statusClass = item.IsActive ? "bg-success" : "bg-secondary";
                                <tr>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td>@item.Category</td>
                                    <td>@Html.DisplayFor(_ => item.StartDateTime)</td>
                                    <td>@Html.DisplayFor(_ => item.EndDateTime)</td>
                                    <td class="text-end">@item.TicketPrice.ToString("N2")</td>
                                    <td class="text-end">@item.TotalTickets</td>
                                    <td class="text-end">@item.AvailableTickets</td>
                                    <td><span class="badge @statusClass">@(item.IsActive ? "Active" : "Inactive")</span></td>
                                    <td>@item.Venue?.Name</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-edit"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
