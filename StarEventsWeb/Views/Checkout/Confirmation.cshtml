@model StarEvents.DataAccess.Models.Booking
@{ ViewData["Title"] = "Order Confirmation"; var primary = "#000080"; var accent = "#ff6600"; }
<div class="row justify-content-center">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm border-0">
            <div class="card-header text-white" style="background:@primary">
                <h5 class="mb-0"><i class="fa fa-check-circle me-2"></i>Reservation Confirmed</h5>
            </div>
            <div class="card-body">
                <p>Thank you! Your tickets for <strong>@Model.Event.Title</strong> have been reserved.</p>
                <ul class="list-unstyled small">
                    <li><strong>Booking Id:</strong> @Model.Id</li>
                    <li><strong>Event Date:</strong> @Html.DisplayFor(m => m.Event.StartDateTime)</li>
                    <li><strong>Total:</strong> LKR @Model.TotalAmount.ToString("N2")</li>
                    <li><strong>Status:</strong> @Model.PaymentStatus</li>
                </ul>
                @if (ViewBag.QrSvg != null)
                {
                    <div class="my-3">
                        <div class="small text-muted">Your QR code:</div>
                        @Html.Raw((string)ViewBag.QrSvg)
                    </div>
                }
                <a asp-controller="Home" asp-action="Events" class="btn btn-outline-primary">Continue Browsing</a>
            </div>
        </div>
    </div>
</div>
