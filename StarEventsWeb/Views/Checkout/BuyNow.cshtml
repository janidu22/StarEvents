@model StarEventsWeb.ViewModels.BuyTicketViewModel
@{ ViewData["Title"] = "Buy Tickets"; var primary = "#000080"; var accent = "#ff6600"; }
<div class="row justify-content-center">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm border-0">
            <div class="card-header text-white" style="background:@primary">
                <h5 class="mb-0"><i class="fa fa-ticket-alt me-2"></i>Buy Tickets</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="small text-uppercase text-muted">Event</div>
                    <div class="fw-semibold">@Model.Title</div>
                    <div class="small text-muted">Starts: @Html.DisplayFor(m => m.StartDateTime)</div>
                </div>
                <form asp-action="BuyNow" method="post">
                    <input type="hidden" asp-for="EventId" />
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Price (LKR)</label>
                            <input class="form-control" value="@Model.TicketPrice.ToString("N2")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Quantity" class="form-label fw-semibold">Quantity</label>
                            <input asp-for="Quantity" type="number" min="1" class="form-control" />
                            <span class="small text-muted">Available: @Model.AvailableTickets</span>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn text-white" style="background:@accent"><i class="fa fa-bolt me-1"></i>Confirm Purchase</button>
                        <a asp-controller="Home" asp-action="Events" class="btn btn-outline-secondary ms-2">Back to events</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
