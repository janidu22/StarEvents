@model StarEventsWeb.ViewModels.EventSearchViewModel
@{
    ViewData["Title"] = "Events";
    var primary = "#000080"; var accent = "#ff6600";
}

<style>
    /* Events Page Specific Styles */
    .events-hero {
        background: linear-gradient(135deg, #000080, #1a1a8a);
        color:#fff;
        padding: 3rem 0;
        text-align:center;
    }

    .events-hero h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .events-hero p {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    /* Search and Filter Section */
    .search-card {
        background:#fff;
        border-radius: 12px;
        padding: 1.25rem;
        box-shadow: 0 5px 15px rgba(0,0,0,.08);
    }

    .search-input {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 12px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        border-color: #000080;
        box-shadow: 0 0 0 3px rgba(0,0,128,0.1);
    }

    .filter-btn {
        background: #000080;
        color:white;
        border:none;
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .filter-btn:hover {
        background:#ff6600;
        transform: translateY(-2px);
    }

    .filter-btn.active {
        background:#ff6600;
    }

    /* Events Grid */
    .event-card {
        border:none;
        border-radius: 12px;
        overflow:hidden;
        box-shadow: 0 6px 16px rgba(0,0,0,.08);
        height:100%;
        margin-bottom: 2rem;
    }

    .event-card:hover {
        transform: translateY(-4px);
        transition: .2s;
    }

    .event-card .card-body {
        padding: 1.5rem;
    }

    .event-card .card-title {
        color: #000080;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .event-card .card-text {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .event-price {
        color: @accent;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .btn-event {
        background: #000080;
        color:#fff;
        border:none;
        padding: 10px 24px;
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-event:hover {
        background:#ff6600;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .events-hero h1 {
            font-size: 2rem;
        }
        
        .events-hero p {
            font-size: 1rem;
        }
        
        .search-card {
            padding: 1rem;
        }
        
        .event-card {
            margin-bottom: 1.5rem;
        }
    }
</style>

<!-- Events Hero Section -->
<section class="events-hero">
    <div class="container">
        <h1 class="h2 fw-bold">Discover Amazing Events</h1>
        <p class="mb-0">Find concerts, theatre shows, and cultural events across Sri Lanka</p>
    </div>
</section>

<!-- Search and Filter Section -->
<section class="py-3 bg-light">
    <div class="container">
        <div class="search-card">
            <form method="get" asp-action="Events" asp-controller="Home">
                <div class="row g-2 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <input type="text" class="form-control" name="Query" value="@Model.Query" placeholder="Title or description" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" name="Category" asp-items="Model.Categories">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Location</label>
                        <select class="form-select" name="Location" asp-items="Model.Locations">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn w-100 btn-event"><i class="fa fa-search me-1"></i>Search</button>
                    </div>
                </div>
                <div class="row g-2 mt-2">
                    <div class="col-md-3">
                        <label asp-for="StartFrom" class="form-label">From</label>
                        @Html.EditorFor(m => m.StartFrom)
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EndTo" class="form-label">To</label>
                        @Html.EditorFor(m => m.EndTo)
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Events Grid -->
<section class="py-4">
    <div class="container">
        @if (Model.Results.Count == 0)
        {
            <div class="alert alert-light border">No events match your filters.</div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var e in Model.Results)
                {
                    <div class="col-lg-3 col-md-4">
                        <div class="card event-card">
                            <div class="card-body">
                                <h6 class="card-title text-primary">@e.Title</h6>
                                <div class="small text-muted">@e.Category • @e.Location</div>
                                <div class="mt-2">
                                    <div class="small"><i class="fa fa-calendar me-1 text-secondary"></i>@Html.DisplayFor(_ => e.StartDateTime)</div>
                                    <div class="small"><i class="fa fa-clock me-1 text-secondary"></i>@Html.DisplayFor(_ => e.EndDateTime)</div>
                                </div>
                                <div class="mt-2 fw-bold" style="color:@accent">@(e.IsFree ? "Free" : ($"LKR {e.TicketPrice:N0}"))</div>
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@e.Id" class="btn btn-sm btn-event mt-2 w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>


