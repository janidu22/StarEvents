@model IEnumerable<StarEvents.DataAccess.Models.Venue>
@{
    ViewData["Title"] = "Venues";
    var accent = "#ff6600";
    var primary = "#000080";
}

<div class="px-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold" style="color:@primary">Venues</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-sm text-white" style="background:@accent"><i class="fa fa-plus me-1"></i>Create Venue</a>
        }
    </div>
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="text-white" style="background:@primary">
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th class="text-end">Capacity</th>
                            <th>Description</th>
                            <th style="width:140px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr><td colspan="5" class="text-center py-4 text-muted">No venues found.</td></tr>
                        }
                        else
                        {
                            foreach (var v in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@v.Name</td>
                                    <td>@v.Location</td>
                                    <td class="text-end">@v.Capacity</td>
                                    <td>@v.Description</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@v.Id" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-outline-warning"><i class="fa fa-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>