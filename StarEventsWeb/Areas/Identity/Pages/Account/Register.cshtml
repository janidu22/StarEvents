@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body { background-color: #f8f9fa; height: 100vh; overflow-x: hidden; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .split-container { min-height: 100vh; height: auto; }
    .form-section { display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #ffffff 0%, #f5f7fa 100%); padding: 2rem; }
    .form-container { width: 100%; max-width: 450px; font-size: 1.1rem; }
    .image-section { background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images2.alphacoders.com/138/1383285.webp') no-repeat center center; background-size: cover; display: flex; align-items: center; justify-content: center; color: white; text-align: center; position: relative; overflow: hidden; }
    .image-content { max-width: 80%; z-index: 1; padding: 20px; }
    .logo { font-weight: 800; font-size: 2.2rem; margin-bottom: 2rem; color: #0d6efd; text-align: center; letter-spacing: 1px; }
    .form-floating { margin-bottom: 1.2rem; }
    .form-control, .form-select { font-size: 1.1rem; padding: 1rem 0.75rem; height: calc(3.5rem + 2px); }
    .form-floating > label { padding: 1rem 0.75rem; font-size: 1.1rem; }
    .btn-primary { padding: 0.9rem; font-weight: 600; font-size: 1.2rem; background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); border: none; border-radius: 8px; margin-top: 1rem; }
    .btn-primary:hover { background: linear-gradient(135deg, #0a58ca 0%, #084298 100%); transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15); }
    .role-select { margin-bottom: 1.5rem; }
    .divider { display: flex; align-items: center; margin: 1.5rem 0; }
    .divider::before, .divider::after { content: ""; flex: 1; border-bottom: 1px solid #ddd; }
    .divider span { padding: 0 1rem; color: #6c757d; font-weight: 500; }
    .feature-list { text-align: left; margin-top: 2rem; }
    .feature-list li { margin-bottom: 1rem; display: flex; align-items: center; }
    .feature-list i { margin-right: 10px; color: #0d6efd; font-size: 1.2rem; }
    .password-strength { height: 5px; margin-top: 5px; border-radius: 3px; background: #eee; }
    .password-strength div { height: 100%; border-radius: 3px; width: 0; transition: width 0.3s; }
    .role-checkbox { margin-bottom: 0.5rem; }
    @@media (max-width: 992px) { .image-section { display:none;} .form-section { width: 100%; } }
    .form-container h1 { font-size: 1.8rem; margin-bottom: 1.5rem; font-weight: 600; color: #333; }
</style>

<div class="container-fluid p-0 split-container">
    <div class="row g-0 min-vh-100">
        <!-- Left Side - Registration Form -->
        <div class="col-12 col-lg-6 form-section">
            <div class="form-container">
         
                <h1 class="mb-4">Create Your Account</h1>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="John Doe" />
                        <label asp-for="Input.FullName">Full Name</label>
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="password-strength">
                            <div id="passwordStrengthBar"></div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Role Dropdown (replacing checkboxes) -->
                    <div class="mb-3 role-select">
                        <label for="userRole" class="form-label mb-2">
                            <i class="fas fa-user-tag me-2"></i>Select Role
                        </label>
                        <select asp-for="Input.RoleName" class="form-select" required>
                          
                            @foreach (var role in Model.RoleNames)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Input.RoleName" class="text-danger"></span>
                        <div class="form-text">Choose the role that best describes your responsibilities.</div>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="Input.AcceptTerms" class="form-check-input" />
                        <label class="form-check-label" asp-for="Input.AcceptTerms"></label>
                        <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </button>

                    <div class="divider">
                        <span>OR</span>
                    </div>

                    
                </form>

                <div class="mt-4 text-center">
                    <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Sign in</a></p>
                </div>
            </div>
        </div>

        <!-- Right Side - Image -->
        <div class="col-lg-6 d-none d-lg-block image-section">
            <div class="image-content">
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ensure checkbox posts a value when unchecked by syncing a hidden input
        (function(){
            const cb = document.querySelector('input[name="Input.AcceptTerms"]');
            if (!cb) return;
            cb.addEventListener('change', function(){
                // Touch the field to force unobtrusive validation re-evaluation
                $(cb).valid && $(cb).valid();
            });
        })();
    </script>
}
